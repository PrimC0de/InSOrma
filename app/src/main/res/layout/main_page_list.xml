<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:layout_margin="50px"
    android:padding="20px">

    <ImageView
        android:id="@+id/ProductPic"
        android:layout_width="193dp"
        android:layout_height="226dp"
        android:src="@drawable/destiny_eating" />

    <TextView
        android:text="Furniture name: Destiny"
        android:id="@+id/furnitureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Rating: 10/10"
        android:id="@+id/furnitureRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Price: Priceless"
        android:id="@+id/furniturePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

