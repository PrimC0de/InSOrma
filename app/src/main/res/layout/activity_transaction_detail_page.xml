<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetailPage"
    android:orientation="vertical"
    android:background="#B4F8C8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/Transaction"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="50dp"
        android:gravity="center_horizontal"
        android:background="@drawable/border">

        <ImageView
            android:id="@+id/furniturePic"
            android:layout_width="193dp"
            android:layout_height="226dp"
            android:src="@drawable/destiny_eating" />

        <TextView
            android:text="Furniture name: Destiny"
            android:id="@+id/furnitureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="Rating: 10/10"
            android:id="@+id/furnitureRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Price: Priceless"
            android:id="@+id/furniturePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Desc: Waifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/furnitureDesc"/>

        <EditText
            android:hint="Quantity"
            android:id="@+id/furnitureQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:id="@+id/buyFurnitureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <!--    <RelativeLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->
    <ImageButton
        android:id="@+id/Home"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_baseline_home_24" />

    <ImageButton
        android:id="@+id/Profile"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/Transaction"
        android:background="@drawable/ic_baseline_person_24" />

    <ImageButton
        android:id="@+id/Transaction"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/Home"
        android:background="@drawable/ic_baseline_attach_money_24" />

</RelativeLayout>