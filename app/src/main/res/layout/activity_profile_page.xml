<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <TextView

        android:id="@+id/userEmail"
        android:textAlignment="center"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="161dp"
        android:text="Email" />

    <TextView
        android:visibility="visible"
        android:id="@+id/userUsername"
        android:textAlignment="center"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="154dp"
        android:hint="Username" />

    <TextView

        android:id="@+id/userPhoneNumber"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userEmail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="159dp"
        android:text="Phone Number: "
        android:textAlignment="center" />

    <EditText

        android:id="@+id/newUserUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="142dp"
        android:hint="new username"
        android:textAlignment="center"
        android:visibility="invisible" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Transaction"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="66dp"
        android:text="Edit"
        android:visibility="visible" />

    <Button
        android:visibility="invisible"
        android:id="@+id/saveChanges"
        android:textSize="13dp"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_toStartOf="@+id/deleteButton"
        android:text="Save" />

    <Button
        android:visibility="invisible"
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@+id/logOut"
        android:text="Delete account"
        android:textSize="9dp" />

    <Button
        android:text="Logout"
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp" />


    <ImageButton
        android:id="@+id/Home"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/ic_baseline_home_24" />

    <ImageButton
        android:id="@+id/Profile"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/Transaction"
        android:background="@drawable/ic_baseline_person_24" />

    <ImageButton
        android:id="@+id/Transaction"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/Home"
        android:background="@drawable/ic_baseline_attach_money_24" />


</RelativeLayout>